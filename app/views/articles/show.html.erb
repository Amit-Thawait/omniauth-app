<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Content:</b>
  <%= @article.content %>
</p>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<h2>Comments</h2>

<% if @authentication %>
<%= form_for([@article, @comment], :remote => true) do |f|%>
<%= f.text_area :comment, :size => "40x5"%>
<%= f.submit %>
<% end %>
<% end %>

<%= render 'comments' %>
